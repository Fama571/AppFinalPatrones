<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <Button
        android:id="@+id/btnConsultaTrabajadores"
        android:layout_width="188dp"
        android:layout_height="77dp"
        android:layout_marginTop="52dp"
        android:text="Consultar Trabajadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnMovimientoTrabajadores"
        android:layout_width="190dp"
        android:layout_height="90dp"
        android:layout_marginTop="68dp"
        android:text="Movimientos de Trabajadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConsultaTrabajadores" />

    <Button
        android:id="@+id/btnRegistroTrabajadores"
        android:layout_width="179dp"
        android:layout_height="89dp"
        android:layout_marginTop="72dp"
        android:text="Registro de trabajadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMovimientoTrabajadores" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="92dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:text="Menu"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>